<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pro.cal_c.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="1"
                    android:shadowColor="@color/colorAccent"
                    android:onClick="numClick"/>

                <Button
                    android:id="@+id/b2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="2"
                    android:onClick="numClick"/>

                <Button
                    android:id="@+id/b3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="3"
                    android:onClick="numClick"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="4"
                    android:onClick="numClick"/>

                <Button
                    android:id="@+id/b5"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:onClick="numClick"/>

                <Button
                    android:id="@+id/b6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="6"
                    android:onClick="numClick"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="7"
                    android:onClick="numClick"/>

                <Button
                    android:id="@+id/b8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="8"
                    android:onClick="numClick"/>

                <Button
                    android:id="@+id/b9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="9"
                    android:onClick="numClick"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b_dec"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="."
                    android:onClick="charClick"/>

                <Button
                    android:id="@+id/b0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="0"
                    android:onClick="numClick"/>

                <Button
                    android:id="@+id/b"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="="
                    android:onClick="eqClick"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/colorAccent">

            <Button
                android:id="@+id/b_c"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:text="C"
                android:onClick="clClick"/>

            <Button
                android:id="@+id/b_d"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:text="/"
                android:onClick="charClick"/>

            <Button
                android:id="@+id/b_m"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:text="*"
                android:onClick="charClick"/>

            <Button
                android:id="@+id/b_s"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:text="+"
                android:onClick="charClick"/>

            <Button
                android:id="@+id/b_sub"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:text="-"
                android:onClick="charClick"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
